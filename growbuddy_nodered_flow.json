    {
        "id": "parse_sensor_data",
        "type": "function",
        "z": "growbuddy_tab",
        "name": "Elabora dati sensori",
        "func": "// Estrai dati dal payload\nconst data = msg.payload;\n\n// Prepara dati per il database\nmsg.payload = {\n    timestamp: new Date(),\n    luce: data.luce || 0,\n    acqua: data.acqua || 0,\n    umidita_terreno: data.umidita_terreno || 0,\n    buio: data.buio || false\n};\n\n// Salva anche in flow context per dashboard\nflow.set('ultima_lettura', msg.payload);\nflow.set('luce', msg.payload.luce);\nflow.set('acqua', msg.payload.acqua);\nflow.set('umidita_terreno', msg.payload.umidita_terreno);\n\nreturn msg;",
        "outputs": 1,
        "x": 380,
        "y": 100,
        "wires": [["save_to_db", "update_dashboard", "http_response"]]
    },
    {
        "id": "http_response",
        "type": "http response",
        "z": "growbuddy_tab",
        "name": "Risposta OK",
        "statusCode": "200",
        "headers": {},
        "x": 620,
        "y": 100,
        "wires": []
    },
    {
        "id": "save_to_db",
        "type": "function",
        "z": "growbuddy_tab",
        "name": "Salva in DB",
        "func": "// Salva nel context globale (array ultimi 100 valori)\nlet history = global.get('sensor_history') || [];\n\nhistory.push(msg.payload);\n\n// Mantieni solo ultimi 100 record\nif (history.length > 100) {\n    history = history.slice(-100);\n}\n\nglobal.set('sensor_history', history);\n\nnode.status({fill:\"green\", shape:\"dot\", text:`Salvato: ${history.length} record`});\n\nreturn msg;",
        "outputs": 1,
        "x": 620,
        "y": 160,
        "wires": [[]]
    },
    {
        "id": "update_dashboard",
        "type": "function",
        "z": "growbuddy_tab",
        "name": "Aggiorna dashboard",
        "func": "// Invia ai gauge della dashboard\nreturn [\n    {topic: \"luce\", payload: msg.payload.luce},\n    {topic: \"acqua\", payload: msg.payload.acqua},\n    {topic: \"umidita\", payload: msg.payload.umidita_terreno}\n];",
        "outputs": 3,
        "x": 640,
        "y": 220,
        "wires": [["gauge_luce"], ["gauge_acqua"], ["gauge_umidita"]]
    },
